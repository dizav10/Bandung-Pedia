<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/template">
    tools:context=".profil"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativ1">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="265dp"
            android:layout_height="175dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/fotoku" />


        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat"
            android:text="10117272"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nim"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="Muhammad Aziduddin Haju"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:fontFamily="@font/montserrat"
            android:text="IF-8"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descdiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kelas"
            android:fontFamily="@font/montserrat"
            android:text="Mahasiswa Universitas Komputer Indonesia"
            android:textAlignment="center"
            android:textSize="20dp" />

    </RelativeLayout>

</RelativeLayout>